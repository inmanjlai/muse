extends layout.pug

block content
    link(rel='stylesheet' href='/stylesheets/form.css')
    main
        div.form-container
            form(action="/login", method="post")
                h2 Log In
                input(type="hidden", name="_csrf", value=csrfToken)
                .form-group
                    label(for="email") Username
                    input.form-control(type= "text", id = 'username', name = 'username' placeholder ='Enter Username' value = username)
                .form-group.end
                    label(for="password") Password
                    input.form-control(type= "password", id = 'password', name = 'password' placeholder = 'Enter Password')
                    input.form-button(type="submit" value='Log In')
            a.form-group(href = '/signup')
                button.form-button(type: "button") Sign Up
            .form-group#demo-container
                button.form-button(type: "button") Demo