extends layout.pug

append head 
    link(rel="stylesheet", href="/stylesheets/login.css")

block content
        div.main-container
            .middle-section
                .image-container
                    h1 muse.
                div.form-container
                    form(action="/users/login", method="post")
                        h2 Login
                        if(errors)
                            ul
                                each error in errors
                                    li= error
                        input(type="hidden", name="_csrf", value=csrfToken)
                        .form-group
                            input.form-control(type= "text", id = 'username', name= 'username' placeholder ='Enter Username')
                            input.form-control(type= "password", id = 'password', name= 'password' placeholder = 'Enter Password')
                            input.form-button(type="submit" value='Log In')
                    form(action="/users/demologin" method="post").demo-form 
                        input(type="hidden", name="_csrf", value=csrfToken)
                        input.form-button(type="submit" value="Demo User")
