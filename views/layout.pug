doctype html
html
  head
      block head
        title="Express Starter App"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel="stylesheet", href="/stylesheets/login.css")
        link(rel="stylesheet", href="/stylesheets/index.css")
  body

    nav#nav-bar
      a#nav-home-link(href='/')
        img#nav-logo(src="/images/image.png", alt="")
      div#search-div
        form#search-form(autocomplete='off')
          input#search-bar(type='text' name='searchQuery' placeholder='Search here...')
      if locals.authenticated
        div#nav-auth
          span#nav-greeting Welcome, #{locals.user.username}
          a(href='/users/logout') Logout
      else
        div#nav-auth
          a(href='/users/login') Login
          a(href='/users/signup') Sign Up
          a(href='/demo') Demo User
    div.body-container
      div.sidenav
        a(class='homebtn', href='/') Home
        a(class='questionbtn', href='/questions') Questions

      div#content
        block content